compilation_database_dir: .
output_directory: puml
diagrams:
  adaptiveFvMesh:
    type: class
    glob:
        - src/dynamicFvMesh/adaptiveFvMesh/adaptiveFvMesh.C
    include_relations_also_as_members: true
    generate_method_arguments: abbreviated
    include:
      context:
        - Foam::fvMeshRefiner
        - Foam::fvMeshBalance
        - Foam::adaptiveFvMesh
      access:
        - public
    exclude:
      namespaces:
        - Foam::adaptiveFvMesh
        - Foam::fvMeshRefiner
        - Foam::fvMeshBalance
      subclasses:
        - Foam::mapPolyMesh
      elements:
        - Foam::dictionary
        - Foam::IOobject
        - Foam::word
        - Foam::IOstreamOption
        - Foam::Switch
        - Foam::polyMesh
        - Foam::fvMesh
        - Foam::volMesh
        - Foam::List
        - Foam::Field
        - Foam::DimensionedField
        - Foam::*::adddictionaryConstructorToTable
      specializations:
        - Foam::autoPtr
    relationship_hints:
      Foam::List: aggregation
      Foam::Field: aggregation
